{
  "name": "Neural Energy dev container",
  "dockerFile": "Dockerfile",
  "runArgs": [
    "--env-file=.env",
    "--gpus=all",
    "--name=neural-energy-devcontainer",
    "-p","5002-5010:5002-5010"
  ],


    
  // VSCode extensions
	"customizations": {
		// Configure properties specific to VS Code.
