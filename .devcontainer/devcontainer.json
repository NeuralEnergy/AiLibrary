			"settings": {
        "bumpTag" : "0.3"
      },
			"extensions": [
        // "streetsidesoftware.code-spell-checker",
        "googlecloudtools.cloudcode",
        "ms-python.python",
        "GitHub.copilot",
        "github.vscode-github-actions",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker", 
        "ms-toolsai.jupyter",
        "njpwerner.autodocstring",
        "Postman.postman-for-vscode"
			]
		}
	}
}